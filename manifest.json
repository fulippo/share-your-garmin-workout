{
	"name": "Share your Garmin Connect workout",
	"version": "1.2.0",
	"description": "Download and share your Garmin Connect workouts as JSON files. Import workouts shared by friends directly into your account.",
	"author": "Filippo Pisano",
	"homepage_url": "https://github.com/fulippo/share-your-garmin-workout",
	
	"icons": {
		"16": "icons/gsyw_16.png",
		"24": "icons/gsyw_24.png",
		"32": "icons/gsyw_32.png",
		"48": "icons/gsyw_48.png",
		"128": "icons/gsyw_128.png",
		"512": "icons/gsyw_512.png"
	},
	
	"action": {
		"default_icon": {
			"16": "icons/gsyw_16.png",
			"24": "icons/gsyw_24.png",
			"32": "icons/gsyw_32.png",
			"48": "icons/gsyw_48.png",
			"128": "icons/gsyw_128.png"
		},
		"default_popup": "popup.html",
		"default_title": "Share your Garmin Connect workout"
	},
	
	"content_scripts": [
		{
			"matches": [
				"https://connect.garmin.com/*",
				"https://connect.garmin.cn/*"
			],
			"run_at": "document_idle",
			"js": [
				"garmin-inject.js"
			]
		}
	],
	
	"web_accessible_resources": [
		{
			"resources": [
				"share-your-workout.js"
			],
			"matches": [
				"https://connect.garmin.com/*",
				"https://connect.garmin.cn/*"
			]
		}
	],
	
	"host_permissions": [
		"*://connect.garmin.com/*",
		"*://connect.garmin.cn/*"
	],
	
	"manifest_version": 3
}